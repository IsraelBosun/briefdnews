rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Articles — publicly readable, never writable from the client
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false;
    }

    // Users — each user can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Preferences subcollection
      match /preferences/{prefId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reading history — doc ID is "{userId}_{articleId}"
    match /readingHistory/{docId} {
      allow read, write: if request.auth != null
        && docId.matches(request.auth.uid + '_.*');
    }
  }
}
